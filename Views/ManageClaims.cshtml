@page
@model ManageClaimsModel

<h2>Manage Claims</h2>

<table>
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Lecturer</th>
            <th>Total Payment</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.Lecturer.Name</td>
                <td>@claim.TotalPayment</td>
                <td>@claim.Status</td>
            </tr>
        }
    </tbody>
</table>

<form method="post">
    <button type="submit" asp-page-handler="GenerateReport">Generate Invoice Report</button>
</form>
